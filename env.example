# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True

# Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here

# Database Configuration
# Development (SQLite)
DATABASE_URL=sqlite:///proper.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql://postgres:proper123@localhost:5432/propdb
# Alternative format:
# SQLALCHEMY_DATABASE_URI=postgresql://postgres:proper123@localhost:5432/propdb

# Database Connection Details
DB_NAME=propdb
DB_USER=postgres
DB_PASS=proper123
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (for password reset, notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# File Upload Configuration
UPLOAD_FOLDER=app/static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/proper.log

# Security Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=3600  # 1 hour

# Application Configuration
COMPANY_NAME=propER
ADMIN_EMAIL=admin@proper.com
SUPPORT_EMAIL=support@proper.com

# Production Server Configuration
PRODUCTION_HOST=51.38.158.159
PRODUCTION_DOMAIN=proper.propin.dev
SSH_USERNAME=mac
SSH_PORT=22

# Feature Flags
ENABLE_REGISTRATION=True
ENABLE_EMAIL_VERIFICATION=False
ENABLE_TWO_FACTOR_AUTH=False

# External Services (if any)
# API_KEY=your-api-key
# WEBHOOK_URL=https://your-webhook-url.com 